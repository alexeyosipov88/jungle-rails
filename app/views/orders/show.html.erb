
    <h1>Order # <%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    <h4>Thank you for your order! Here are the details of your order.</h4>
  </div>

  <div class="panel panel-default items">
  <table class="table table-bordered">
    <thead>
      <tr>
        <th colspan="1">Product</th>
        <th>Image</th>
        <th>Description</th>
        <th>Quantities</th>
    
      </tr>
    </thead>
    <tbody>
    
      <% @order.line_items.each do |item| %>
        <tr> 
        <th><%=  item.product.name %> </th>
        <th><%=  image_tag item.product.image.thumb, alt: item.product.name %> </th>
        <th><%=  item.product.description %> </th>
        <th><%=  item.quantity %> </th>
        
        </tr>

      <% end %>
    </tbody>
    <tfoot> 
      <tr>
        <th colspan="3">
          TOTAL:
        </th>
        <th>
          <%= humanized_money_with_symbol @order.total_cents / 100.0 %>
          
        </th>
        
      </tr>
      <td><%= @order.email %></td>  

    </tfoot>
  </table>
 
</div>
  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
